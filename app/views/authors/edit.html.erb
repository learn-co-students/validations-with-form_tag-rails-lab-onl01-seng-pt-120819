<h2>Editing "<%= @author.name %>"</h2>
<%= form_tag author_path(@author), method: "patch" do %>

<% if @author.errors.any? %>
 <div id="error_explanation">
  <h3>There were some errors:</h3>
    <ul>
    <%@author.errors.messages.each do |message| %>
    <li><%= message %></li>
    <%end%>
    </ul>
 </div>
<%end%>

  <div class="field <%='field_with_errors' if @author.errors[:name].any?%>">
    <%= label_tag "name", "Name" %>
    <%= text_field_tag "name", @author.name %>
  </div>

  <div class="field">
    <%= label_tag "email", "Email" %>
    <p>Must be unique".</p>
    <%= text_field_tag "email", @author.email %>
  </div>

  <div class="field">
    <%= label_tag "phone_number", "Phone Number" %>
    <br />
    <%= text_field_tag "phone_number", @author.phone_number %>
  </div>
  <%= submit_tag "Update" %>
<% end %>
